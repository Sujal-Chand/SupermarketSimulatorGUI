<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="gamePU">
        
        <!-- Entity Classes -->
        <class>com.pdcgame.Models.GameSave</class>
        
        <properties>
            <!-- JDBC connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:database/SuperMarketDB_Ebd;create=true"/>
            <property name="jakarta.persistence.jdbc.user" value="pdc"/>
            <property name="jakarta.persistence.jdbc.password" value="pdc"/>

            <!-- Hibernate dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>

            <!-- Schema generation -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL logs -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>